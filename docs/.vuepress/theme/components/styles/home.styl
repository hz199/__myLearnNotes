  .ribbonHead > .ribbonBack:before, .ribbonHead > .ribbonBack:after {
    content ""
    display block
    width 0
    height 0
    position absolute
    border-style solid
    z-index 1
  }
}

.clearfix:after {
  content ''
  height 0
  line-height 0
  clear both
  overflow hidden 
}

.home:before {
  content: "";
  display: block;
  border: 2px solid #ffffff;
  border-bottom: 12px solid #ffffff;
  border-top: 0;
  border-left: 0;
  border-right: 0;
  position: absolute;
  left: -20px;
  top: -20px;
  right: -20px;
  bottom: -100px;
  border-radius:20px 20px 20px 600px;  
  transition: all 1s;
}

@media screen and (max-width: 966px) {
  .home {
    column-count 2
  }
}

@media screen and (max-width: 500px) {
  .home {
    column-count 1
  }
}
