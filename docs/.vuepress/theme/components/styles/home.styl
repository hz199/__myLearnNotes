.home {
  column-count 4
  column-gap 2em
  .item {
    margin-bottom 1em
    -moz-page-break-inside avoid
    -webkit-column-break-inside avoid
    break-inside avoid
    border-radius 8px
    overflow hidden
    position relative
    cursor pointer
    box-shadow 5px 5px 5px rgba(0,0,0,0.4)
    > img {
      width 100%
      height auto
      z-index 1
      position relative
      display block
      border-radius 8px
    }
  }
  .item .ribbonHead h4, .item .ribbonHead .ribbonBack {
    transition: all 0.3s;
  }

  .item .ribbonHead .ribbonBack {
    transition-delay 0.2s
  }

  .item:hover .ribbonHead h4 {
    transform: translate3d(-8px, 0, 0);
    opacity 1
  }

  .item:hover .ribbonHead .ribbonBack {
    transform: translate3d(-8px, -59px, 0)
    opacity 1
  }

  // 头部 title
  .ribbonHead, .ribbonTag {
    position absolute
  }
  .ribbonHead > h4 {
    opacity 0
    max-width: 180px;
    background #C93E3E
    padding 0.8em
    border-radius 0 25px 25px 0
    color #ffffff
    transform: translate3d(-40px, 0, 0)
    z-index: 2
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    position relative
  }
  .ribbonHead > .ribbonBack {
    width 8px
    height 38px
    transform: translate3d(8px, -59px, 0)
    z-index 0
    background #C93E3E
    position relative
    opacity 0
  }
  .ribbonHead > .ribbonBack:before {
    top -8px
    border-width 8px
    border-top-color: transparent;
    border-right-color: transparent;
    border-bottom-color: transparent;
    border-left-color: #C93E3E;
  }
  .ribbonHead > .ribbonBack:after {
    bottom: -16px
    border-right-color: transparent;
    border-bottom-color: transparent;
    border-left-color: transparent;
    border-top-color: #C93E3E;
    border-right-width 0px
    border-bottom-width 8px
    border-left-width 8px
    border-top-width 8px
  }
  .ribbonHead > .ribbonBack:before, .ribbonHead > .ribbonBack:after {
    content ""
    display block
    width 0
    height 0
    position absolute
    border-style solid
    z-index 1
  }
}

@media screen and (max-width: 966px) {
  .home {
    column-count 2
  }
}

@media screen and (max-width: 500px) {
  .home {
    column-count 1
  }
}
